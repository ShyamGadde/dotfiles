{
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "extensions.ignoreRecommendations": true,
  // =====================
  // Auto Rename Tag
  // =====================
  "auto-rename-tag.activationOnLanguage": ["html", "xml", "php", "javascript"],
  // =====================
  // Code runner
  // =====================
  "code-runner.runInTerminal": true,
  "code-runner.executorMap": {
    "ahk": "autohotkey",
    "applescript": "osascript",
    "autoit": "autoit3",
    "bat": "cmd /c",
    "c": "cd $dir && gcc $fileName -o $fileNameWithoutkExt && $dir$fileNameWithoutExt",
    "clojure": "lein exec",
    "coffeescript": "coffee",
    "cpp": "cd $dir && g++ $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "crystal": "crystal",
    "csharp": "scriptcs",
    "d": "cd $dir && dmd $fileName && $dir$fileNameWithoutExt",
    "dart": "dart",
    "fortran_fixed-form": "cd $dir && gfortran $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "fortran-modern": "cd $dir && gfortran $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "fortran": "cd $dir && gfortran $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "FortranFreeForm": "cd $dir && gfortran $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "fsharp": "fsi",
    "go": "go run",
    "groovy": "groovy",
    "haskell": "runhaskell",
    "haxe": "haxe --cwd $dirWithoutTrailingSlash --run $fileNameWithoutExt",
    "java": "cd $dir && javac $fileName && java $fileNameWithoutExt",
    "javascript": "node",
    "julia": "julia",
    "kit": "kitc --run",
    "less": "cd $dir && lessc $fileName $fileNameWithoutExt.css",
    "lisp": "sbcl --script",
    "lua": "lua",
    "nim": "nim compile --verbosity:0 --hints:off --run",
    "objective-c": "cd $dir && gcc -framework Cocoa $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "ocaml": "ocaml",
    "pascal": "cd $dir && fpc $fileName && $dir$fileNameWithoutExt",
    "perl": "perl",
    "perl6": "perl6",
    "php": "php",
    "powershell": "powershell -ExecutionPolicy ByPass -File",
    "python": "python -u",
    "r": "Rscript",
    "racket": "racket",
    "ruby": "ruby",
    "rust": "cd $dir && rustc $fileName && $dir$fileNameWithoutExt",
    "sass": "sass --style expanded",
    "scala": "scala",
    "scheme": "csi -script",
    "scss": "scss --style expanded",
    "shellscript": "bash",
    "swift": "swift",
    "typescript": "ts-node",
    "v": "v run",
    "vbscript": "cscript //Nologo"
  },
  // =====================
  // Copilot
  // =====================
  "accessibility.voice.keywordActivation": "quickChat",
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false
  },
  "github.copilot.advanced": {
    "authProvider": "github"
  },
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.chat.editor.temporalContext.enabled": true,
  "github.copilot.chat.edits.temporalContext.enabled": true,
  "accessibility.voice.ignoreCodeBlocks": true,
  "github.copilot.chat.codesearch.enabled": true,
  "chat.promptFiles": true,
  "github.copilot.chat.newWorkspaceCreation.enabled": true,
  "chat.renderRelatedFiles": true,
  "editor.inlineSuggest.edits.showCollapsed": true,
  "github.copilot.selectedCompletionModel": "gpt-4o-copilot",
  "chat.experimental.statusIndicator.enabled": true,
  // =====================
  // Emmet
  // =====================
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  // =====================
  // Error Lens
  // =====================
  "errorLens.fontStyleItalic": true,
  // =====================
  // Even Better TOML
  // =====================
  "evenBetterToml.formatter.trailingNewline": true,
  // ================================
  // GitHub Pull Requests and Issues
  // ================================
  "githubPullRequests.pullBranch": "never",
  // ================================
  // GitLens
  // ================================
  "gitlens.blame.fontFamily": "'Monaspace Xenon'",
  // ========================
  // Indent Rainbow
  // ========================
  "indentRainbow.colorOnWhiteSpaceOnly": true,
  "indentRainbow.indicatorStyle": "light",
  // ========================
  // Inline SQL
  // ========================
  "inlineSQL.dbDriver": "mysql",
  "inlineSQL.dbPassword": "",
  "inlineSQL.dbPort": 3306,
  "inlineSQL.dbUser": "root",
  "inlineSQL.lintSQLFiles": true,
  "inlineSQL.enableDBIntegration": true,
  // ========================
  // Jupyter Notebook
  // ========================
  "jupyter.askForKernelRestart": false,
  "notebook.lineNumbers": "on",
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "notebook.editorOptionsCustomizations": {},
  "notebook.output.textLineLimit": 500,
  "notebook.inlineValues": "on",
  // ========================
  // Markdown
  // ========================
  "markdown.extension.print.theme": "dark",
  "markdown.extension.toc.orderedList": true,
  // ========================
  // Paste Image
  // ========================
  "pasteImage.basePath": "${currentFileDir}/assets",
  "pasteImage.path": "${currentFileDir}/assets",
  // ========================
  // Pieces
  // ========================
  "pieces.code-lens": false,
  // ========================
  // Project Manager
  // ========================
  "projectManager.git.baseFolders": ["$home/Workspace/projects"],
  "projectManager.sortList": "Recent",
  // ========================
  // Surround
  // ========================
  "surround.custom": {
    "surround.with.tryExcept": {
      "label": "try/except",
      "description": "Surrounds the selection with a try/except block",
      "snippet": "try:\n\t${TM_SELECTED_TEXT}\nexcept ${1:Exception}:\n\t${2:pass}",
      "languageIds": ["python"]
    }
  },
  // ========================
  // SVG Preview
  // ========================
  "svg.preview.mode": "svg",
  // ========================
  // Todo Tree
  // ========================
  "todo-tree.general.showActivityBarBadge": true,
  "todo-tree.general.tags": ["TODO:", "FIX:"],
  "todo-tree.highlights.customHighlight": {
    "FIX:": {
      "icon": "flame",
      "background": "#f00",
      "iconColour": "#f00",
      "foreground": "#fff"
    },
    "TODO:": {
      "icon": "check",
      "background": "#0f0",
      "iconColour": "#0f0",
      "foreground": "#000"
    }
  },
  // ========================
  // VSCode Neovim
  // ========================
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  // ========================
  // VSIntellicode
  // ========================
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  // ========================
  // Terminal
  // ========================
  "terminal.external.windowsExec": "C:\\Program Files\\PowerShell\\7\\pwsh.exe",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.env.linux": {},
  "terminal.integrated.env.windows": {},
  "terminal.integrated.fontFamily": "'JetBrainsMono Nerd Font', monospace",
  "terminal.integrated.fontLigatures.enabled": true,
  "terminal.integrated.fontLigatures.featureSettings": "'calt', 'cv02', 'cv04', 'cv05', 'cv06', 'cv07', 'cv09', 'cv10', 'cv11', 'cv12', 'cv16', 'cv18', 'cv19', 'cv20', 'ss19', 'zero'",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.tabs.title": "${process}${progress}",
  "terminal.integrated.suggest.enabled": true,
  // ========================
  // Editor settings
  // ========================
  "editor.bracketPairColorization.enabled": true,
  "editor.fontFamily": "'JetBrainsMono Nerd Font', monospace",
  "editor.fontLigatures": "'calt', 'cv02', 'cv04', 'cv05', 'cv06', 'cv07', 'cv09', 'cv10', 'cv11', 'cv12', 'cv16', 'cv18', 'cv19', 'cv20', 'ss19', 'zero'",
  "editor.fontSize": 15,
  "editor.guides.bracketPairs": "active",
  "editor.inlayHints.fontFamily": "'Monaspace Xenon'",
  "editor.inlineSuggest.fontFamily": "'Monocraft'",
  "editor.lineHeight": 24,
  "editor.lineNumbers": "relative",
  "editor.linkedEditing": true,
  "editor.suggestSelection": "first",
  "editor.wordWrap": "on",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": ["comment"],
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "editor.accessibilitySupport": "off",
  "editor.inlineSuggest.enabled": true,
  "editor.inlayHints.enabled": "onUnlessPressed",
  "editor.codeLens": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.showFoldingControls": "always",
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "editor.stickyScroll.enabled": true,
  "editor.formatOnType": true,
  // =====================
  // Cursor
  // =====================
  "editor.cursorBlinking": "phase",
  "editor.cursorWidth": 3,
  "editor.cursorSmoothCaretAnimation": "on",
  // =====================
  // Files
  // =====================
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.associations": {
    "*.css": "css"
  },
  // =====================
  // Minimap
  // =====================
  "editor.minimap.scale": 2,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.autohide": true,
  "editor.minimap.enabled": false,
  // =====================
  // Source Control
  // =====================
  "git.autofetch": true,
  "git.confirmSync": false,
  "scm.defaultViewMode": "tree",
  "github.gitProtocol": "ssh",
  "git.mergeEditor": true,
  "diffEditor.hideUnchangedRegions.enabled": true,
  // =====================
  // Zen mode
  // =====================
  "zenMode.hideLineNumbers": false,
  // =====================
  // Workbench
  // =====================
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,
  "window.commandCenter": true,
  "window.customMenuBarAltFocus": false,
  "window.customTitleBarVisibility": "auto",
  "workbench.editorAssociations": {
    "*.png": "imagePreview.previewEditor",
    "*.md": "default"
  },
  "window.menuBarVisibility": "toggle",
  "window.newWindowProfile": "Default",
  "window.titleBarStyle": "custom",
  "workbench.colorCustomizations": {},
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.list.horizontalScrolling": true,
  "workbench.startupEditor": "readme",
  "workbench.tree.enableStickyScroll": true,
  "workbench.settings.useWeightedKeySearch": true,
  // =====================
  // React
  // =====================
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "reactSnippets.settings.importReactOnTop": false,
  // =====================
  // JavaScript
  // =====================
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "javascript.suggest.paths": false,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingJsxExpressionBraces": true,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": true,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": true,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingTemplateStringBraces": true,
  "javascript.format.semicolons": "insert",
  //"javascript.inlayHints.parameterNames.enabled": "all",
  //"javascript.inlayHints.variableTypes.enabled": true,
  "javascript.inlayHints.propertyDeclarationTypes.enabled": true,
  //"javascript.inlayHints.parameterTypes.enabled": true,
  //"javascript.inlayHints.functionLikeReturnTypes.enabled": true,
  "javascript.referencesCodeLens.enabled": true,
  "javascript.referencesCodeLens.showOnAllFunctions": true,
  // =====================
  // TypeScript
  // =====================
  "typescript.suggest.paths": false,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingJsxExpressionBraces": true,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": true,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": true,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingTemplateStringBraces": true,
  "typescript.format.semicolons": "insert",
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.referencesCodeLens.enabled": true,
  "typescript.implementationsCodeLens.enabled": true,
  //"js/ts.implicitProjectConfig.checkJs": true,
  // =====================
  // HTML
  // =====================
  "[html]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "html.format.indentInnerHtml": true,
  "html.format.templating": true,
  // =====================
  // CSS
  // =====================
  "[css]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "css.format.spaceAroundSelectorSeparator": true,
  "css.lint.compatibleVendorPrefixes": "warning",
  "css.lint.zeroUnits": "warning",
  // =====================
  // Java
  // =====================
  "java.jdt.ls.java.home": "/usr/lib/jvm/java-21-temurin",
  // =====================
  // JSON
  // =====================
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  // =====================
  // Python
  // =====================
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
    //"editor.rulers": [88]
  },
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  //"python.analysis.inlayHints.callArgumentNames": true,
  "python.analysis.inlayHints.pytestParameters": true,
  // =====================
  // PHP
  // =====================
  "[php]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 4,
    "editor.defaultFormatter": "persoderlind.vscode-phpcbf",
    "editor.formatOnSave": false
  },
  "intelephense.format.braces": "k&r",
  "intelephense.stubs": [
    "apache",
    "bcmath",
    "bz2",
    "calendar",
    "com_dotnet",
    "Core",
    "ctype",
    "curl",
    "date",
    "dba",
    "dom",
    "enchant",
    "exif",
    "FFI",
    "fileinfo",
    "filter",
    "fpm",
    "ftp",
    "gd",
    "gettext",
    "gmp",
    "hash",
    "iconv",
    "imap",
    "intl",
    "json",
    "ldap",
    "libxml",
    "mbstring",
    "meta",
    "mysqli",
    "oci8",
    "odbc",
    "openssl",
    "pcntl",
    "pcre",
    "pdo_ibm",
    "pdo_mysql",
    "pdo_pgsql",
    "pdo_sqlite",
    "PDO",
    "pgsql",
    "Phar",
    "posix",
    "pspell",
    "random",
    "readline",
    "Reflection",
    "session",
    "shmop",
    "SimpleXML",
    "snmp",
    "soap",
    "sockets",
    "sodium",
    "SPL",
    "sqlite3",
    "standard",
    "superglobals",
    "sysvmsg",
    "sysvsem",
    "sysvshm",
    "tidy",
    "tokenizer",
    "wordpress",
    "xml",
    "xmlreader",
    "xmlrpc",
    "xmlwriter",
    "xsl",
    "Zend OPcache",
    "zip",
    "zlib"
  ],
  "intelephense.codeLens.implementations.enable": true,
  "intelephense.codeLens.overrides.enable": true,
  "intelephense.codeLens.parent.enable": true,
  "intelephense.codeLens.references.enable": true,
  "intelephense.codeLens.usages.enable": true,
  "intelephense.compatibility.preferPsalmPhpstanPrefixedAnnotations": true,
  "intelephense.diagnostics.run": "onSave",
  "phpcs.enable": true,
  "phpcs.standard": "WordPress",
  "phpcs.showSources": true,
  "phpcs.ignorePatterns": [
    "*/.circleci/*",
    "*/vendor/*",
    "*/vendors/*",
    "*/wp-admin/*",
    "*/wp-includes/*",
    "*/mu-plugins/*"
  ],
  "phpcbf.enable": true,
  "phpcbf.standard": "WordPress",
  "php-docblocker.useShortNames": true,
  // =====================
  // Markdown
  // =====================
  "[markdown]": {
    "files.trimTrailingWhitespace": false,
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    }
  },
  "markdown.preview.fontFamily": "'Recursive Mono Casual Static', apple-system, BlinkMacSystemFont, 'Segoe WPC', 'Segoe UI', system-ui, 'Ubuntu', 'Droid Sans', sans-serif",
  // =====================
  // Dockerfile
  // =====================
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  // ==========================
  // Miscellaneous settings
  // ==========================
  "telemetry.telemetryLevel": "off",
  "security.workspace.trust.enabled": false,
  "security.workspace.trust.untrustedFiles": "open",
  "accessibility.underlineLinks": true,
  "security.promptForLocalFileProtocolHandling": false
}
