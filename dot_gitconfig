[core]
	pager = delta

[init]
	defaultBranch = main

[alias]
	cp = !git commit -m "Update" && git push
	facp = !git add . && git cp

[user]
	email = shyamgadde1602@gmail.com
	name = Shyamsundar Gadde
	signingkey = ~/.ssh/id_ed25519

[gpg]
	format = ssh

[commit]
	gpgsign = true

[tag]
	gpgSign = true

[credential "https://github.com"]
	helper = !/usr/bin/gh auth git-credential

[credential "https://gist.github.com"]
	helper = !/usr/bin/gh auth git-credential

[delta]
	navigate = true    # use n and N to move between diff sections

[interactive]
	diffFilter = delta --color-only

[color]
	ui = true

[diff]
	algorithm = patience
	compactionHeuristic = true
	colorMoved = dimmed_zebra
	tool = nvimdiff

[difftool "nvimdiff"]
	cmd = nvim -d $LOCAL $REMOTE -c 'wincmd w' -c 'wincmd L'

[merge]
	conflictstyle = diff3
	prompt = false
	tool = nvimdiff4

[mergetool "nvimdiff4"]
	cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J' -c 'set diffopt&' -c 'set diffopt+=algorithm:patience'
	keepBackup = false

[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f

[submodule]
	recurse = true

[includeIf "gitdir:~/Workspace/rtCamp/"]
	path = .gitconfig.work
