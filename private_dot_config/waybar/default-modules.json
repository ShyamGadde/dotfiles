{
  "hyprland/workspaces": {
    "format": "{icon}",
    "on-click": "activate",
    "separate-outputs": true
  },

  "hyprland/window": {
    "format": "{title}",
    "max-length": 200,
    "separate-outputs": true
  },

  "clock": {
    "format": "  {:%a %d %b     %I:%M %p}",
    "tooltip-format": "<tt>{calendar}</tt>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "on-click-right": "mode",
      "format": {
        "months": "<span color='#89b4fa'><b>{}</b></span>",
        "weekdays": "<span color='#fab387'><b>{}</b></span>",
        "today": "<span color='#a6e3a1'><b>{}</b></span>"
      }
    },
    "actions": {
      "on-click-right": "mode"
    }
  }
}
