[edit]
    command = "nvim"

[git]
    autoCommit = false
    commitMessageTemplate = "{{ `{{ promptString \"Commit message\" }}` }}"
    autoPush = false

[diff]
    command = "nvim"
    args = ["-d", "{{ `{{ .Destination }}` }}", "{{ `{{ .Target }}` }}"]

[merge]
   command = "nvim"
   args = ["-d", "{{ `{{ .Source }}` }}", "{{ `{{ .Destination }}` }}", "{{ `{{ .Target }}` }}"]
